generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  password   String
  name       String?
  role       UserRole   @default(USER)
  status     UserStatus @default(ACTIVE)
  updated_at DateTime   @updatedAt
  created_at DateTime   @default(now())
}
